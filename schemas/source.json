{
    "$schema": "https://json-schema.org/draft/2020-12/schema#",
    "$id": "https://raw.githubusercontent.com/echemdb/metadata-schema/main/schemas/source.json#",
    "allOf": [{ "$ref": "#/$definitions/Source" }],
    "$definitions": {
        "Source": {
            "type": "object",
            "title": "source",
            "additionalProperties": false,
            "required": [
                "citation key",
                "url"
            ],
            "properties": {
                "citation key": {
                    "type": "string"
                },
                "url": {
                    "$ref": "./general/url.json"
                },
                "techniques": {
                    "type": "array",
                    "contains": {
                        "type": "string"
                    }
                },
                "figure": {
                    "type": "string"
                },
                "bibdata": {
                    "type": "string"
                },
                "comment": {
                    "type": "string"
                },
                "curve": {
                    "type": "string"
                }
            }
        }
    }
}
